<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:res="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_user"
    android:layout_margin="8dp"
    res:cardBackgroundColor="#f0f8ff"
    res:cardCornerRadius="6dp"
    res:cardElevation="6sp"
    res:contentPadding="6dp"
    res:contentPaddingTop="8dp"
    res:contentPaddingBottom="8dp">

        <RelativeLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/item_image_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="#f5f5f5"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="Avatar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_text_view"
                    android:text="@string/username"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/item_image_view"
                    android:layout_toRightOf="@+id/item_image_view"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp"
                    android:textSize="24sp"/>

        </RelativeLayout>

</android.support.v7.widget.CardView>

